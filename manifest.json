{
  "manifest_version": 3,
  "name": "PhraseBE",
  "description": "Simple Chrome extension that opens a textarea popup for phrasing.",
  "version": "0.1.0",
  "action": {
    "default_title": "PhraseBE",
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [],
  "host_permissions": ["<all_urls>"]
}
