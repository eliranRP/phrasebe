{
  "name": "phrasebe",
  "version": "0.1.0",
  "private": true,
  "description": "Chrome extension that rephrases text with a popup + floating chat.",
  "scripts": {
    "build": "webpack --config webpack.dev.js",
    "build:dev": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "watch": "webpack --config webpack.prod.js --watch",
    "watch:dev": "webpack --config webpack.dev.js --watch",
    "clean": "rm -rf dist dist-dev dist-prod",
    "clean:dev": "rm -rf dist-dev",
    "clean:prod": "rm -rf dist-prod",
    "zip:dev": "npm run build:dev && cd dist-dev && /usr/bin/zip -r phrasebe-dev.zip . >/dev/null || true",
    "zip:prod": "npm run build:prod && cd dist-prod && /usr/bin/zip -r phrasebe-prod.zip . >/dev/null || true",
    "zip": "npm run zip:prod",
    "legacy-build": "./build.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "chrome-types": "^0.1.376",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
