{
  "name": "phrasebe",
  "version": "0.1.0",
  "private": true,
  "description": "Chrome extension that rephrases text with a popup + floating chat.",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rm -rf dist",
    "zip": "npm run build && cd dist && /usr/bin/zip -r phrasebe.zip . >/dev/null || true",
    "legacy-build": "./build.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "chrome-types": "^0.1.376",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
