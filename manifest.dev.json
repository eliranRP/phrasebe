{
  "manifest_version": 3,
  "name": "PhraseBE (Dev)",
  "description": "Simple Chrome extension that opens a textarea popup for phrasing.",
  "version": "0.1.0",
  "action": {
    "default_title": "BePhrase",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
