{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "src",
    "rootDir": "src/ts",
    "allowJs": false,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/ts/**/*"]
}
